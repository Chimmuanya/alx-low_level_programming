#include "main.h"

/* betty style doc for function main goes there */
/**
 * _strncat- entry function
 * copies first n characters of a string to dest buffer.
 * @src: string to be copied.
 * @dest: destination buffer.
 * @n: number of chars of src to be copied.
 * Return:pointer to resulting string dest.
 */
char *_strncat(char *dest, char *src, int n)
{
	/*initialize pointer to *dest, src and dest len*/

	char *dptr = dest;
	int len_d = 0;
	int len_s = 0;
	int counter = 0;

	/* first calculate length of src */
	while (*src != '\0')
		len_s++;
	src -= len_s;
	/* attach src up to n chars to end of dest */
	while (*src != '\0' && counter < n)
	{
		*dptr = *src;
		src++;
		dptr++;
		counter++;
	}

	/* while src length is less than n, pad with NULL characters until n*/
	while (counter < n)
	{
		*dptr = '\0';
		dptr++;
		counter++;
	}

	/* return pointer to dest */
	return (dptr - (counter));
}
